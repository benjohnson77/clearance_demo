  <div class="well" >
    <legend>Update Style for All Items</legend>
    <%= simple_form_for @style , defaults: { input_html: { class: 'form-control' } } do |f| %>
    <fieldset>
      <div class="row">
        <div class="form-group col-md-4">  
          <%= f.input :name %>
        </div>
        <div class="form-group col-md-4">  
          <%= f.input :type,collection: @style_types %>
        </div>  
      </div>
      <div class="row">
        <div class="form-group col-md-4">  
          <%= f.input :wholesale_price, value: number_with_precision(f.object.wholesale_price, precision: 2)  %>
        </div>
        <div class="form-group col-md-4">  
          <%= f.input :retail_price,  value: number_with_precision(f.object.retail_price, precision: 2) %>
        </div>

        <div class="form-group col-md-1 bottom">
          <%= f.button :submit, class: 'btn-primary' %>
        </div>  
      </div>
    </fieldset>  
    <% end %>
  </div>